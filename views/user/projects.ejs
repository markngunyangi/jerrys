<main>
    <%- include('../includes/dashnav.ejs')%>
    <section class="main">
        <div class="main-header">
            <div class="main-header__search">
                <ion-icon name="search-outline"></ion-icon>
                <input type="text" name="search" id="searchProject">
            </div>
            <div class="main-header__profile">
                <p>Jeremy</p>
