<script type="module" src="https://unpkg.com/ionicons@5.1.2/dist/ionicons/ionicons.esm.js"></script>
<script nomodule="" src="https://unpkg.com/ionicons@5.1.2/dist/ionicons/ionicons.js"></script>
<script src="https://unpkg.com/@popperjs/core@2"></script>
<script>
    const projectsToggle = document.querySelector('.projects-toggle');
    const projectsMenu = document.querySelector('.projects-menu');

    Popper.createPopper(projectsToggle, projectsMenu, {
        modifiers: [{
            name: 'offset',
            options: {
                offset: [0, 8],
            },
        }, ],
    });

    const connectToggle = document.querySelector('.connect-toggle');
    const connectMenu = document.querySelector('.connect-menu');

    Popper.createPopper(connectToggle, connectMenu, {
        modifiers: [{
            name: 'offset',
            options: {
                offset: [0, 8],
            },
        }, ],
    });

    const exploreToggle = document.querySelector('.explore-toggle');
    const exploreMenu = document.querySelector('.explore-menu');

    Popper.createPopper(exploreToggle, exploreMenu, {
        modifiers: [{
            name: 'offset',
            options: {
                offset: [0, 8],
            },
        }, ],
    });

    function show() {
        exploreMenu.setAttribute('data-show', '');
    }


    function hide() {
        exploreMenu.removeAttribute('data-show');
    }

    const hideEvents = ['mouseleave', 'blur'];
    const showEvents = ['click', 'mouseenter', 'focus'];

    showEvents.forEach(event => {
        projectsToggle.addEventListener(event, () => {
            projectsMenu.setAttribute('data-show', '');
        });
        connectToggle.addEventListener(event, () => {
            connectMenu.setAttribute('data-show', '');
        });
        exploreToggle.addEventListener(event, () => {
            exploreMenu.setAttribute('data-show', '');
        });
    });

    hideEvents.forEach(event => {
        projectsMenu.addEventListener(event, () => {
            projectsMenu.removeAttribute('data-show');
        });
        connectMenu.addEventListener(event, () => {
            connectMenu.removeAttribute('data-show');
        });
        exploreMenu.addEventListener(event, () => {
            exploreMenu.removeAttribute('data-show');
        });
    });
</script>
</body>

</html>