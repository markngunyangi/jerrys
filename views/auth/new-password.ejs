<link rel="stylesheet" href="/css/login.css">
<%- include('../includes/head.ejs')%>
</head>

<body>
    <%- include('../includes/navigation.ejs')%>
    </header>
    <div class="main login">
        <div class="form-container reset-form">
            <% if(errorMessage) {%>
            <div class="flash-message flash-message-danger"><span class="bold">Oh snap!</span><%= errorMessage %></div>
            <% } %>
            <form action="/new-password" method="POST" autocomplete="off">
                <p>Input your new Password</p>
                <div class="form-body">
                    <label for="password">New password</label>
                    <input type="password" placeholder="Password" name="password" />
                    <input type="hidden" name="userId" value="<%= userId %>">
                    <input type="hidden" name="passwordToken" value="<%= passwordToken %>">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit">Update Password</button>
                </div>
            </form>
        </div>
    </div>
    <%- include('../includes/end.ejs')%>